	{{!this is the jumbotron in the top}} 

	<div class="container" >
    {{!these are some brief intrdcution of the page and city}}
		
   		<h1 style="font-family: Gamja Flower; font-size: 50px; padding-bottom: 20px; text-transform: uppercase; color: #2c3e50;">
   				Entertainments @ {{city}}</h1>
   		<h3 style="font-family: Gamja Flower; color: #2c3e50 font-size: 50px"><i class="fa fa-camera-retro"></i>
   				A bunch of entertainment ideas, tips, and recommendations for you for a happier journey!</h3>
  		<br><br>


{{!--this container1 is used to hold the pageSwitch pattern, with use of some function defined in javaScript file--}}
		<div id="container1">
  	  		<div class="sections" id="pageAll">

  	  			{{#each top3}}
				<div style="width: 100%; height= 30%">
					<img  class="section" id="section{{@key}}" onclick="jumpContent('jumpContent{{@key}}','section{{@key}}')" 
					src = "{{img}}" style="width: 100%; height= 150%">

					{{!this is the jump part which is hidden before user click onto the picture}}
					{{!the display option was controlled by the function jumpContent() and jumpBack() defined in the javaScript file}}

    			 	<div id="jumpContent{{@key}}"style="height: 0%; width: 0%; left:50%; top:50%; position: absolute; border: none; 
    			 	background-color: #efefef; opacity: 0ï¼› font-size: 20px; display: none" onclick="jumpBack('jumpContent{{@key}}','section{{@key}}')">

   	    	 	    	<div id="show{{@key}}"  class='caption' align="center" style="font-family: Gamja Flower;">
        					<h3>{{title}}</h3>
	          				<p>{{details.descrip}}</p>
	          				<p><strong>When:</strong> {{details.when}}</p>
	          				<p><strong>Where:</strong> {{details.where}}</p>
	          				<p><strong>Ticket Info:</strong> {{ticketInfo.discount}}</p>
	          				<p><a href="{{ticketInfo.link}}" class="btn btn-primary" role="button">Book Tickets!</a></p>
	          			</div>
	          			
    				</div>

				</div>
       			{{/each}}

    		</div>
		</div>
		<br><br>


{{!this is the template of the general blocks to provide the information of entertainments}}
	    <div class="row">

	      {{#each regular}}

	      <div class="col-lg-4 col-sm-6">
	        <div class="thumbnail">

	          <img  src="{{img}}" style="height: 180px; width: 100%;" >
	          <h3>{{title}}</h3>
	          		{{!block information taken from the data base}}
    				<div class="caption">

	          			<p>{{details.descrip}}</p>
	          			<p><strong>When:</strong> {{details.when}}</p>
	          			<p><strong>Where:</strong> {{details.where}}</p>
	          			<p><strong>Ticket Info:</strong> {{ticketInfo.discount}}</p>
	          			<p><a href="{{ticketInfo.link}}" class="btn btn-primary" role="button">Book Tickets!</a></p>
	          		</div>
	        </div>
	      </div>

	      {{/each}}

		</div>

	</div>

