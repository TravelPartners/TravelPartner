<!--table records the comments user uploaded-->
<table class="table table-hover">
    <tbody>
      <!--each row is a record-->
        {{#each comment}}
        <tr>
            <td>
              <!--each row has for colums-->
                <h4><a class="text-info" href={{url}} target="_blank" style="color:#5c8cd5">{{title}}</h4></a>

                <div >
                    {{#each keyword}}
                    <code style="color:#5c8cd5">{{this}}</code>
                    {{/each}}
                </div>
            </td>
            <td>
            </td>
            <td>
              <!-- author and upload time-->
                <h4>{{author}}</h4>
                 <div style="float: left;">{{modified_at}}</div>
            </td>
            <td>
              <!-- number of votes-->

                <h4>{{votes}}</h4>
                VOTES
            </td>

            <td>
              <!-- number of views -->

                <h4>{{views}}</h4>
                VIEWS
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<!-- create button to create a new comment-->
<button id="write" onClick="location.href='{{create}}'"  class="btn btn-primary" >Write a comment!</button>

<button onclick="topFunction()" id="myBtn" type="button" class="btn btn-primary" style="position: fixed; bottom: 20px;right: 30px;">Top</button>
 </div>
<script>
    window.onscroll = function() {scrollFunction()};

    $(document).ready(function() {
      $('#write')
        .click(function(){
          //if user has not sign in first,
          // sign-in-modal will show
          if (localStorage.getItem('token')==null) {
        $('#sign-in-modal').modal('show');
            return false;
          }
          var url = $('#canwrite').val();
          location.href(url);
          return true;
      });
    });

    //define the function of top button
    function scrollFunction() {
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            document.getElementById("myBtn").style.display = "block";
        } else {
            document.getElementById("myBtn").style.display = "none";
        }
    }

    function topFunction() {
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
    }

</script>



