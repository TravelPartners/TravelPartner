    <script type="text/javascript">
     $(document).ready(function() {
         // TODO: Change it. Check status each time listener is triggered.
         // var lastScroll = 0;
         // $(window).scroll(function() {
         //    var thisScroll = $(this).scrollTop();
         //    if (thisScroll > lastScroll) {
         //        $('#nav-container').hide(200);
         //    } else {
         //        $('#nav-container').show(200);
         //    }
         //    lastScroll = thisScroll;
         // });

         var islogin = true;

         let nameInStorage = localStorage.getItem('username');
         if (nameInStorage != undefined) {
             $('#dropdown-profile-link').attr('href', '/u/profile/' + nameInStorage);
             $('#userInfoArea #userName').text(nameInStorage);
             $('#beforeLogin').hide();
             $('#afterLogin').show();
         }


         $('#btn-signin').click(function(event){
             event.preventDefault();

             var name = $('#inputName').val();
             var pwd = $('#inputPassword').val();

             var signInErrorText = '';
             $('#signInError').text('');

             if (name == undefined || name == '')
                 signInErrorText += 'Name cannot be blank. <br/>';

             if (pwd == undefined || pwd == '')
                 signInErrorText += 'Password cannot be blank. <br>';

             if (islogin) {
                 if (signInErrorText != '') {
                     $('#signInError').html(signInErrorText);
                     $('#signInError').show();
                     return false;
                 }
                 axios.post('/s/signin', {
                     username: name,
                     pwd: pwd
                 }).then(function (resp) {
                     console.log(resp);
                     if (resp.data.status == 'success') {
                         console.log(resp);
                         localStorage.setItem('token', resp.data.token);
                         localStorage.setItem('avatar', resp.data.avatar);
                         localStorage.setItem('username', name);

                         $('#userInfoArea #userName').text(name);
                         $('#beforeLogin').hide();
                         $('#signInError').hide();
                         $('#afterLogin').show();
                         $('#sign-in-modal').modal('hide');

                         location.reload();
                     } else if (resp.data.status == 'err') {
                         //console.log(err);
                         $('#signInError').text(resp.data.msg);
                         $('#signInError').show();
                     }
                 }).catch(function(err) {
                     console.log(err);
                 });
             } else {
                 var email = $('#inputEmail').val();
                 var retypedPwd = $('#inputRetypedPassword').val();

                 if (email == undefined || email == '')
                     signInErrorText += 'Email cannot be blank. <br>';
                 if (retypedPwd == undefined || retypedPwd == '')
                     signInErrorText += 'Retyped password cannot be blank. <br>';

                 if (pwd != undefined && retypedPwd != undefined && pwd != '' && retypedPwd != '' && pwd != retypedPwd)
                     signInErrorText += 'Retyped password did not match the password.';

                 if (signInErrorText != '') {
                     $('#signInError').html(signInErrorText);
                     $('#signInError').show();
                     return false;
                 }

                 axios.post('/s/signup', {
                     username: name,
                     pwd: pwd,
                     email: email
                 }).then(function (resp) {
                     console.log(resp);
                     if (resp.data.status == 'success') {
                         console.log(resp);
                         localStorage.setItem('token', resp.data.token);
                         localStorage.setItem('avatar', resp.data.avatar);
                         localStorage.setItem('username', resp.data.username);

                         $('#userInfoArea #userName').text(name);
                         $('#beforeLogin').hide();
                         $('#signInError').hide();
                         $('#afterLogin').show();
                         $('#sign-in-modal').modal('hide');

                         location.reload();
                     } else if (resp.data.status == 'err') {
                         //console.log(err);
                         $('#signInError').text(resp.data.error.msg);
                         $('#signInError').show();
                     }
                 }).catch(function(err) {
                     console.log(err);
                 });
             }
         });

         $('#btn-signout').click(function(event){
             event.preventDefault();
             console.log('123');

             $('#userInfoArea #userName').text('');
             $('#beforeLogin').show();
             $('#signInError').hide();
             $('#afterLogin').hide();

             localStorage.removeItem('username');
             localStorage.removeItem('token');
             localStorage.removeItem('avatar');

             location.reload();
         });

         $('#to-register').click(function(event) {
             event.preventDefault();

             islogin = (islogin == true ? false : true);
             if (islogin) {
                 $('#sign-in-modal #myModalLabel').html('Log with');
                 $('#inputName').attr('placeholder', 'Username/email');
                 $('.for-sign-up').hide();
                 $('#btn-signin').html('Sign in');
             } else {
                 $('#sign-in-modal #myModalLabel').html('Register');
                 $('#inputName').attr('placeholder', 'Username');
                 $('.for-sign-up').show();
                 $('#btn-signin').html('Register');
             }
        });

     });
    </script>
